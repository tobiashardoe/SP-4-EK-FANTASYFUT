<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="standings"
        xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fpl.gui.LeagueStandingsController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@/styles/SimLayout.css">
    <ImageView id="backgroundImage" fitHeight="${standings.height}" fitWidth="${standings.width}" preserveRatio="false" smooth="true" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <image>
            <Image url="@/images/Login.jpg" />
        </image>
    </ImageView>

    <Label text="League Standings"
           layoutX="250" layoutY="30">
        <font><Font size="40"/></font>
    </Label>

    <TableView fx:id="table"
               layoutX="50" layoutY="120"
               prefWidth="400" prefHeight="500">
        <columns>
            <TableColumn fx:id="rankCol" text="Rank" prefWidth="80"/>
            <TableColumn fx:id="userCol" text="User" prefWidth="200"/>
            <TableColumn fx:id="pointsCol" text="Points" prefWidth="120"/>
        </columns>
    </TableView>

    <TableView fx:id="playersTable"
               layoutX="470" layoutY="120"
               prefWidth="380" prefHeight="500">
        <columns>
            <TableColumn fx:id="nameCol" text="Player" prefWidth="160"/>
            <TableColumn fx:id="positionCol" text="Pos" prefWidth="80"/>
            <TableColumn fx:id="playerPointsCol" text="Points" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Back"
            layoutX="390" layoutY="640"
            prefWidth="120" prefHeight="40"
            onAction="#handleBack"/>

</AnchorPane>
